<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'nn-form'}) do |f| %>

    <%= devise_error_messages! %>

    <div class="sectionRest clearfix">
      <div>
        <fieldset>
          <ol>
            <li><h2 class='sectionHeading'>Login Information</h2></li>
            <li>
              <%= f.label :username, 'Username:<em>*</em>'.html_safe, :class => 'wide' %>
              <%= f.text_field :username, :required => 'true' %>
            </li>
            <li>
              <%= f.label :password, 'Password:<em>*</em>'.html_safe, :class => 'wide' %>
              <%= f.password_field :password, :autocomplete => 'off', :required => 'true' %>
            </li>
            <li>
              <%= f.label :password_confirmation, 'Re-type password:<em>*</em>'.html_safe, :class => 'wide' %>
              <%= f.password_field :password_confirmation, :required => 'true' %>
            </li>
            <li><h2 class='sectionHeading'>Contact Information</h2></li>
            <li>
              <%= f.label :user_type, 'Type:<em>*</em>'.html_safe, :class => 'wide' %>
              <%= f.collection_select :user_type_id, UserType.all, :id, :name, {:prompt => 'Select type'}, {:required => 'true'} %>
            </li>
            <li>
              <%= f.label :first_name, 'First name:<em>*</em>'.html_safe, :class => 'wide' %>
              <%= f.text_field :first_name, :required => 'true' %>
            </li>
            <li>
              <%= f.label :last_name, 'Last name:<em>*</em>'.html_safe, :class => 'wide' %>
              <%= f.text_field :last_name,  :required => 'true' %>
            </li>
            <li>
              <%= f.label :email, 'Email:<em>*</em>'.html_safe, :class => 'wide' %>
              <%= f.email_field :email,  :required => 'true' %>
            </li>
            <li>
              <%= f.label :phone, 'Phone:<em>*</em>'.html_safe, :class => 'wide' %>
              <%= f.text_field :phone,  :required => 'true' %>
            </li>


            <li>
              <%= f.label :street1, 'Street 1:', :class => 'wide' %>
              <%= f.text_field :street1 %>
            </li>
            <li>
              <%= f.label :street2, 'Street 2:', :class => 'wide' %>
              <%= f.text_field :street2 %>
            </li>
            <li>
              <%= f.label :city, 'City:', :class => 'wide' %>
              <%= f.text_field :city %>
            </li>
            <li>
              <%= f.label :state, 'State:', :class => 'wide' %>
              <%= f.collection_select :state_id, State.all, :id, :name, :prompt => 'Select state' %>
            </li>
            <li>
              <%= f.label :zip, 'ZIP code:', :class => 'wide' %>
              <%= f.text_field :zip %>
            </li>



          </ol>
        </fieldset>
        <fieldset>
          <ol>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li><h2 class='sectionHeading'>Organization/Business </h2></li>

            <li>
              <%= f.label :org_name, 'Organization name:', :class => 'wide' %>
              <%= f.text_field :org_name %>
            </li>
            <li>
              <%= f.label :job_title, 'Job title:', :class => 'wide' %>
              <%= f.text_field :job_title %>
            </li>


            <li>
              <%= f.label :org_street1, 'Street 1:', :class => 'wide' %>
              <%= f.text_field :org_street1 %>
            </li>
            <li>
              <%= f.label :org_street2, 'Street 2:', :class => 'wide' %>
              <%= f.text_field :org_street2 %>
            </li>
            <li>
              <%= f.label :org_city, 'City:', :class => 'wide' %>
              <%= f.text_field :org_city %>
            </li>
            <li>
              <%= f.label :org_state, 'State:', :class => 'wide' %>
              <%= f.collection_select :org_state_id, State.all, :id, :name, :prompt => 'Select state' %>
            </li>
            <li>
              <%= f.label :org_zip, 'ZIP code:', :class => 'wide' %>
              <%= f.text_field :org_zip %>
            </li>
          </ol>
        </fieldset>

      </div>

      <div style="clear: both"></div>
    </div>

    <div class="actions">
      <%= recaptcha_tags %>
      <br/>.
      <%= submit_tag 'Cancel', :type => 'button', :onclick => "location.href = '/'" %>
      <%= f.submit %></div>

<% end %>
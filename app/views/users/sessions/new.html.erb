<br/><br/>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <table>
      <tr>
        <td><%= f.label :username %></td>
        <td><%= f.text_field :username, :autofocus => true, :required => true, :title => 'Enter a valid username.' %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password, :value => '123', :required => true, :title => 'Enter a valid password.' %></td>
      </tr>

      <% if devise_mapping.rememberable? -%>
          <tr>
            <td></td>
            <td>
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            </td>
          </tr>
      <% end -%>

      <tr>
        <td></td>
        <td><%= f.submit "Sign in" %></td>
      </tr>
    </table>
<% end %>

<br/>
<%= render "devise/shared/links" %>

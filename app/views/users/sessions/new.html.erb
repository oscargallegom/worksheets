<br/><br/>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= hidden_field_tag :next, params[:next] %>
    <table>
      <tr>

        <td><%= f.text_field :username, :autofocus => true, :required => true, :placeholder => 'Username', :title => 'Enter your username.' %></td>
      </tr>
      <tr>

        <td><%= f.password_field :password, :value => '', :required => true, :placeholder => 'Password', :title => 'Enter your password.' %></td>
      </tr>

      <% if devise_mapping.rememberable? -%>
          <tr>
            <td>
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            </td>
          </tr>
      <% end -%>

      <tr>

        <td><%= f.submit "Sign in" %></td>
      </tr>
      <tr>
        <td>
          <br/>
          <%= render "devise/shared/links" %>
        </td>
      </tr>
    </table>
<% end %>



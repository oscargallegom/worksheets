<h1>Listing users</h1>

<%= form_tag users_path, :method => 'get'  do %>
<p>
  <%= text_field_tag :search, params[:search], :placeholder => "Search here" %>
  <%= submit_tag "Search", :body => nil %>
</p>
<% end %>

<%= form_tag disable_multiple_users_path, :method => :put do %>
<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>


      <% @users.each do |user| %>
          <tr>
            <td class="option">
              <input type="hidden" name="user_ids_all[]" value="<%=user.id %>" checked>
              <%= check_box_tag "user_ids[]", user.id, !user.deleted_at.nil? %>

            </td>
            <td><%= user.email %></td>

            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </table>

      <br/>

      <%= submit_tag "Edit Checked" %>

      <%= link_to 'New User', new_user_path %>
<% end %>

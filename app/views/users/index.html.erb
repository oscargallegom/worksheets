<div style="position:relative">
  <ul id="tabNav">

    <li <%= 'class=selected' if params[:status]=='notapproved'  %>><%= link_to 'Accounts not approved', users_path(:status => 'notapproved') %></li>
    <li <%= 'class=selected' if params[:status]=='approved'  %>><%= link_to 'Accounts approved', users_path(:status => 'approved') %></li>
    <li <%= 'class=selected' if params[:status]=='deleted'  %>><%= link_to 'Accounts deleted', users_path(:status => 'deleted') %></li>
    <li <%= 'class=selected' unless params[:status]  %>><%= link_to 'All', users_path %></li>
    <li class="shadow"></li>
  </ul>
</div>

<br/>

<h1>Listing users</h1>

<%= form_tag users_path, :method => 'get'  do %>


    <p>
  <%= text_field_tag :search, params[:search], :placeholder => "Search here" %>
  <%= submit_tag "Search", :body => nil %>
</p>
<% end %>

<%= form_tag disable_multiple_users_path, :method => :put do %>
<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>


      <% @users.each do |user| %>
          <tr>
            <td class="option">
              <input type="hidden" name="user_ids_all[]" value="<%=user.id %>" checked>
              <%= check_box_tag "user_ids[]", user.id, user.approved %>

            </td>
            <td><%= user.email %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.deleted_at %></td>

            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </table>

      <br/>

      <%= submit_tag "Edit Checked" %>

      <%= link_to 'New User', new_user_path %>
<% end %>

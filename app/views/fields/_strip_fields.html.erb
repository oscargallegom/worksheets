        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
          <%= link_to image_tag('/images/copy.png', :alt => 'Duplicate', :title => 'Duplicate crop'), duplicate_farm_field_strip_crop_rotation_path(crop_rotation.strip.field.farm.id, crop_rotation.strip.field.id, crop_rotation.strip.id, crop_rotation.id), :method => :post %>
          &nbsp;
          <%= link_to image_tag('/images/delete.png', :alt => 'Delete'), farm_field_strip_crop_rotation_path(crop_rotation.strip.field.farm.id, crop_rotation.strip.field.id, crop_rotation.strip.id, crop_rotation.id), method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>

      <% end %>

    </table>

